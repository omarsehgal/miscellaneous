<h2>Skills <span class="edit">edit</span></h2>
<ul>
  <% if @profile.full_profile_at.nil? %>
    <% @linkedin_profile.skills.each do |sk| %>
      <li>
        <blockquote>
          <p><%= sk %></p>
        </blockquote>
      </li>
    <% end %>
  <% else %>
      <% if @profile.profile_skills.count == 0 %>
        <li>
          <blockquote><p>Please add..</p></blockquote>
        </li>
      <% else %>
        <% @profile.profile_skills.each do |ps| %>
          <li>
            <blockquote>
              <p><%= ps.name %></p>
            </blockquote>
          </li>
        <% end %>
      <% end %>
  <% end %>
</ul>


